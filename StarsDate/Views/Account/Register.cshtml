@model RegisterVM


<form class="form-horizontal" asp-controller="Account" asp-action="Register" method="post">
    <h4>Register</h4>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div>
        <div class="col-md-6 col-xs-12 col-sm-6">
            <div class="form-group">
                <label asp-for="Email" class="col-sm-4"></label>
                <input asp-for="Email" class="form-control" placeholder="Email Adresi" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6 col-xs-12 col-sm-6">
            <div class="form-group">
                <label asp-for="Password" class="col-sm-4"></label>
                <input asp-for="Password" class="form-control" placeholder="Şifre" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6 col-xs-12 col-sm-6">
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="col-sm-4"></label>
                <input asp-for="ConfirmPassword" class="form-control" placeholder="Şifre tekrar" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        <button type="submit" class="btn btn-default form-group col-sm-2">Register</button>

    </div>



</form>